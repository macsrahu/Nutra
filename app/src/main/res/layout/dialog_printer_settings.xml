<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10ssp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/relCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_margin="@dimen/_5ssp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_root_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Printer" />

        <Spinner
            android:id="@+id/spinner_printer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_root_name"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:textColor="@color/colorPrimary"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"></Spinner>
    </LinearLayout>
</LinearLayout>
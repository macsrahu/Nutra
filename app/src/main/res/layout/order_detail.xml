<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="MissingClass">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_5ssp"
        android:layout_marginRight="@dimen/_10ssp"
        android:layout_marginBottom="@dimen/_5ssp"
        android:background="@drawable/expand_panel_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvOrderNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_2ssp"
            android:background="@drawable/title_radious"
            android:fontFamily="@font/lato"
            android:gravity="center_horizontal|center_vertical"
            android:lines="1"
            android:padding="@dimen/_5ssp"
            android:text="Order No"
            android:textColor="@color/white"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOrderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.50"
                android:fontFamily="@font/lato"
                android:gravity="center_horizontal|center_vertical"
                android:lines="1"
                android:padding="@dimen/_5ssp"
                android:text="Order Date"
                android:textColor="@color/gray"></TextView>

            <TextView
                android:id="@+id/tvOrderAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.50"
                android:fontFamily="@font/lato"
                android:gravity="center_horizontal|right"
                android:lines="1"
                android:padding="@dimen/_5ssp"
                android:text="Amount"
                android:textColor="@color/gray"></TextView>
        </LinearLayout>


        <TextView
            android:id="@+id/tvDealer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/lato"
            android:gravity="center_horizontal|center_vertical"
            android:lines="4"
            android:padding="@dimen/_5ssp"
            android:text="Dealer"
            android:textColor="@color/gray"></TextView>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:id="@+id/relProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginRight="@dimen/_10ssp"
        android:layout_weight="1"
        android:background="@drawable/expand_panel_border"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOrderItems"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/cardSpinner"

            android:clipToPadding="false"
            android:padding="@dimen/_4ssp"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/tvNoRecordFound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/lato"
            android:gravity="center_horizontal|center_vertical"
            android:text="No order(s) found"
            android:textAllCaps="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray"
            android:textSize="@dimen/_16ssp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginRight="@dimen/_10ssp"
        android:layout_marginBottom="@dimen/_5ssp"
        android:background="@color/light_grey"
        android:orientation="horizontal"
        android:padding="@dimen/_5ssp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:fontFamily="@font/lato"
            android:padding="@dimen/_5ssp"
            android:text="Total Order Amount"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/text_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:background="@drawable/total_radious_submit"
            android:fontFamily="@font/lato"
            android:gravity="right"
            android:padding="@dimen/_5ssp"
            android:text="0.00"
            android:textColor="@color/white"></TextView>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/white"
        app:backgroundTint="@color/gray"
        app:elevation="@dimen/_5ssp"
        app:itemIconTint="@color/white"
        app:itemRippleColor="@color/colorAccent"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu_order_detail" /><!--    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation-->

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:focusableInTouchMode="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_viewMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5ssp"
        android:elevation="5dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layDefaultMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_2ssp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="94dp"
                        android:padding="@dimen/_5ssp"
                        android:id="@+id/imgPicture"
                        android:src="@drawable/booth"
                        android:layout_height="94dp">
                    </androidx.appcompat.widget.AppCompatImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_1ssp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/title_radious"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvShop"
                            android:paddingLeft="@dimen/_4ssp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".30"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:textColor="@color/white"
                            android:text="Shop Name"
                            android:textAllCaps="true"
                            android:typeface="normal" />

                        <ImageButton
                            android:id="@+id/menu_edit"
                            android:layout_width="wrap_content"
                            android:layout_weight="0"
                            android:layout_height="24dp"
                            android:src="@drawable/menu">

                        </ImageButton>
<!--                        <info.androidhive.fontawesome.FontTextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/fa_dot_circle"-->
<!--                            android:textSize="@dimen/_15ssp"-->
<!--                            app:solid_icon="true" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_1ssp"
                        android:background="@color/md_light_appbar"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDealerName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/_1ssp"
                            android:layout_weight="1"
                            android:lines="1"
                            android:text="Dealer"
                            android:textColor="@color/md_green_900"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvStoreName"
                            android:layout_marginTop="@dimen/_1ssp"
                            android:lines="5"
                            android:maxLines="3"
                            android:text="Address"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/lineView"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@color/colorPrimary"
                android:padding="@dimen/_5ssp"
                android:paddingBottom="10dip"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_4ssp">

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.90"
                    android:text="Email"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tvContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Contact No"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>